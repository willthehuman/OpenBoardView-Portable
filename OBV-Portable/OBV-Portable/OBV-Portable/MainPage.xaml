<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OBV_Portable.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Open Board View Portable" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Button Clicked="BtnLoadFile_Clicked"  Text="Open a board file" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="200" CornerRadius="25" FontSize="Large"/>

    </StackLayout>

</ContentPage>
